            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:context=".MainActivity">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="P1"
                    android:textColor="#616161"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/p1_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="0"
                    android:textSize="56sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-light"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp">

                    <Button
                        android:id="@+id/p1_settlement_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textSize="10sp"
                        android:onClick="p1_settlement"
                        android:text="Settlement" />

                    <Button
                        android:id="@+id/p1_city_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/p1_settlement_button"
                        android:layout_margin="2dp"
                        android:onClick="p1_city"
                        android:text="City"
                        android:textSize="10sp"/>

                    <Button
                        android:id="@+id/p1_road_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/p1_settlement_button"
                        android:layout_margin="2dp"
                        android:onClick="p1_road"
                        android:text="Longest Road"
                        android:textSize="10sp"/>

                    <Button
                        android:id="@+id/p1_army_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/p1_road_button"
                        android:layout_toRightOf="@id/p1_settlement_button"
                        android:layout_margin="2dp"
                        android:onClick="p1_army"
                        android:text="Largest Army"
                        android:textSize="10sp"/>

                </RelativeLayout>

            </LinearLayout>

